<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gray"
        android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:orientation="vertical">

                <include
                    android:id="@+id/termCondToolBar"
                    layout="@layout/toolbar_common" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/termCondToolBar"
                    android:layout_above="@+id/loginBtn"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp">


                        <ImageView
                            android:id="@+id/itemCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/ic_call_night_user_icon"
                            app:cardCornerRadius="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.16000003" />



                        <TextView
                            android:id="@+id/tollFreeLabel"
                            style="@style/textNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:text="@string/toll_free"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/itemCard"
                            app:layout_constraintStart_toEndOf="@+id/itemCard"
                            app:layout_constraintTop_toTopOf="@+id/itemCard"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/callNumber"
                            style="@style/textRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummyNumber"
                            android:textColor="@color/white_second"
                            android:textSize="13sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/tollFreeLabel"
                            app:layout_constraintStart_toStartOf="@+id/tollFreeLabel"/>




                        <View
                            android:id="@+id/bottomDividerLine"
                            android:layout_width="0dp"
                            android:layout_height="0.8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/view_line_clr"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tollFreeLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="15dp" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:id="@+id/emailIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_mail"
                            app:cardCornerRadius="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.16000003" />



                        <TextView
                            android:id="@+id/emailLabel"
                            style="@style/textNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:text="@string/email"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/emailIcon"
                            app:layout_constraintStart_toEndOf="@+id/emailIcon"
                            app:layout_constraintTop_toTopOf="@+id/emailIcon"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/email"
                            style="@style/textRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_email"
                            android:textColor="@color/white_second"
                            android:textSize="13sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/emailLabel"
                            app:layout_constraintStart_toStartOf="@+id/emailLabel"/>




                        <View
                            android:id="@+id/emailBottomDivider"
                            android:layout_width="0dp"
                            android:layout_height="0.8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/view_line_clr"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/emailLabel"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="15dp" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_icon"
                            app:cardCornerRadius="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.16000003" />



                        <TextView
                            android:id="@+id/addressLabel"
                            style="@style/textNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:text="@string/address"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/locationIcon"
                            app:layout_constraintStart_toEndOf="@+id/locationIcon"
                            app:layout_constraintTop_toTopOf="@+id/locationIcon"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/contactAddress"
                            style="@style/textRegular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_address"
                            android:textColor="@color/white_second"
                            android:textSize="13sp"
                            android:paddingStart="5dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="10dp"
                            android:lineSpacingExtra="5dp"
                            android:minLines="2"
                            android:paddingEnd="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/addressLabel"
                            app:layout_constraintStart_toStartOf="@+id/addressLabel"/>







                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_dark_blue"
                        android:layout_marginTop="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/full_name"
                            style="@style/textRegular"
                            android:textColor="@color/text_hint" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            style="@style/appDarkEditText"
                            android:text="Jhon Wick"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:hint="@string/enter_full_name"
                            android:inputType="text" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_dark_blue"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/phone_no"
                            style="@style/textRegular"
                            android:textColor="@color/text_hint" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            style="@style/appDarkEditText"
                            android:text="Jhon Wick"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:hint="@string/enter_phone_number"
                            android:inputType="text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_dark_blue"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            style="@style/appDarkEditText"
                            android:gravity="start"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:hint="@string/type_your_query"
                            android:lineSpacingExtra="5dp"
                            android:minLines="5"
                            android:maxHeight="@dimen/_150sdp"
                            android:text="@string/duumyText"
                            android:inputType="textMultiLine" />

                    </LinearLayout>



                </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginBtn"
                    style="@style/buttonTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/gredient_bg"
                    android:text="@string/submit"
                    android:layout_margin="@dimen/_10ssp"
                    android:layout_alignParentBottom="true"
                 />

            </RelativeLayout>





    </LinearLayout>

</layout>