                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/sideMenuEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
