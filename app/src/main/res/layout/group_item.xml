<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/_7sdp">

        <ImageView
            android:id="@+id/grupItemProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:src="@drawable/chat_ic_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/grupItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_bold"
            android:textSize="@dimen/_12ssp"
            android:text="Title"
            android:textColor="@color/white_thred"
            app:layout_constraintEnd_toStartOf="@+id/grupItemChk"
            app:layout_constraintStart_toEndOf="@+id/grupItemProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/grupItemSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="SubTitle"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/white_second"
            app:layout_constraintTop_toBottomOf="@+id/grupItemTitle"
            app:layout_constraintEnd_toStartOf="@+id/grupItemChk"
            app:layout_constraintStart_toEndOf="@+id/grupItemProfile"
            />


        <ImageView
            android:id="@+id/grupItemChk"
            android:layout_width="wrap_content"
            android:src="@drawable/unchk_box"
            android:padding="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/grupItemProfile"
            app:layout_constraintTop_toTopOf="@+id/grupItemProfile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>


        <View
            style="@style/view_line"
            android:background="@color/dialog_view_lineclr"
            android:layout_height=".5dp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginEnd="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grupItemProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>