<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:background="@drawable/box_botomsheet"
        android:padding="@dimen/_8sdp">


        <ImageView
            android:id="@+id/lostItemProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:src="@drawable/lostimg1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lostItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="Watch"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/lostItemProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lostItemSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2ssp"
            android:fontFamily="@font/proximanova_reg"
            android:text="30 July, 2021"
            android:textColor="@color/white_second"
            android:textSize="@dimen/_11ssp"


            app:layout_constraintStart_toEndOf="@+id/lostItemProfile"
            app:layout_constraintTop_toBottomOf="@+id/lostItemTitle" />

        <ImageView
            android:id="@+id/lostItem3Dot"
            android:layout_width="wrap_content"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/setting_threedot"
            app:layout_constraintTop_toTopOf="@+id/lostItemProfile"
            app:layout_constraintBottom_toBottomOf="@+id/lostItemProfile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>