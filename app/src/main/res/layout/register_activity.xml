<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:id="@+id/no_app_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/no_app_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.9"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/login_small_icon_bg"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/splash_logo"
                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account"
                android:textColor="@color/text_gray"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                style="@style/textRegular"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registration"
                android:textColor="@color/white"
                android:textSize="25sp"
                style="@style/textBold"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_hint"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/text_hint"
                    app:hintEnabled="true"
                    android:hint="@string/food_store_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@style/textRegular"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/text_blk"
                        tools:text="Gyanchand">


                    </com.google.android.material.textfield.TextInputEditText>



                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@style/textRegular"
                android:layout_gravity="start"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardElevation="-1dp"
                    app:cardCornerRadius="4dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextColor="@color/text_hint"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/text_hint"
                        app:hintEnabled="true"
                        android:hint="@string/first_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            style="@style/textRegular"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/text_blk"
                            tools:text="Gyanchand">


                        </com.google.android.material.textfield.TextInputEditText>



                    </com.google.android.material.textfield.TextInputLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    app:cardElevation="-1dp"
                    app:cardCornerRadius="4dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextColor="@color/text_hint"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/text_hint"
                        app:hintEnabled="true"
                        android:hint="@string/last_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            style="@style/textRegular"
                            android:textSize="16sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/text_blk"
                            tools:text="Prajapati">


                        </com.google.android.material.textfield.TextInputEditText>



                    </com.google.android.material.textfield.TextInputLayout>



                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_hint"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/text_hint"
                    app:hintEnabled="true"
                    android:hint="@string/email_id">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@style/textRegular"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/text_blk">


                    </com.google.android.material.textfield.TextInputEditText>



                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Spinner
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="0.8dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:alpha="0.8"
                        android:background="@color/text_blk"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextColor="@color/text_hint"
                        android:layout_margin="8dp"
                        android:textColorHint="@color/text_hint"
                        app:hintEnabled="false"
                        android:hint="@string/email_id">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            style="@style/textRegular"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/text_blk">


                        </com.google.android.material.textfield.TextInputEditText>



                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_hint"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/text_hint"
                    app:hintEnabled="true"
                    android:hint="@string/password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@style/textRegular"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/text_blk"
                        tools:text="Gyanchand">


                    </com.google.android.material.textfield.TextInputEditText>



                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_hint"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/text_hint"
                    app:hintEnabled="true"
                    android:hint="@string/confirm_password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@style/textRegular"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/text_blk"
                        tools:text="Gyanchand">


                    </com.google.android.material.textfield.TextInputEditText>



                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardElevation="-1dp"
                app:cardCornerRadius="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_hint"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/text_hint"
                    app:hintEnabled="true"
                    android:hint="@string/address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textRegular"
                        android:textSize="16sp"
                        android:inputType="textMultiLine"
                        android:background="@color/white"
                        android:gravity="start"
                        android:minLines="3"
                        android:ellipsize="end"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/text_blk"
                        tools:text="P.no 53 Govind Nagar Rampura Road Sanganer Jaipur Rajasthan 302029">


                    </com.google.android.material.textfield.TextInputEditText>



                </com.google.android.material.textfield.TextInputLayout>



            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/registrationNextBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textSize="20sp"
                style="@style/textRegular"
                android:background="@drawable/ic_yellow_gradient"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>