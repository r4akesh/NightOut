<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_bg_outgoinging_bubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/chatLeftLocationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@tools:sample/cities" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="3dp"

                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chatLeftLocationName"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/chatLeftLocationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/proximanova_reg"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"

                android:layout_marginStart="9dp"
                android:maxLines="2"
                android:minLines="1"
                android:text="ZIP"
                android:textColor="@android:color/white"
                android:textSize="12sp"

                app:layout_constraintEnd_toEndOf="@+id/chatLeftLocationName"
                app:layout_constraintStart_toStartOf="@+id/chatLeftLocationName"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/chatLeftLocationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:fontFamily="@font/proximanova_reg"
                android:text="12:15 pm"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingBottom="1dp"
                app:layout_constraintTop_toBottomOf="@+id/chatLeftLocationAddress"

                app:layout_constraintStart_toStartOf="parent"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>