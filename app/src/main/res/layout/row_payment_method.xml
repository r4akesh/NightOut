<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="0.4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_111A2F">

    <CheckBox
        android:id="@+id/checkMethodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:text="@string/blank"
        android:theme="@style/MyRadioButton"/>


    <ImageView
        android:id="@+id/paymentMethodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_paypal_method_icon"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/checkMethodBtn"
        app:layout_constraintTop_toTopOf="@+id/checkMethodBtn"
        app:layout_constraintBottom_toBottomOf="@+id/checkMethodBtn"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paypal"
        android:textColor="@color/white"
        android:textSize="16sp"
        style="@style/textRegular"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/paymentMethodIcon"
        app:layout_constraintStart_toEndOf="@+id/paymentMethodIcon"
        app:layout_constraintTop_toTopOf="@+id/paymentMethodIcon" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_spinner_arrow"
        android:padding="5dp"
        android:layout_margin="15dp"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>