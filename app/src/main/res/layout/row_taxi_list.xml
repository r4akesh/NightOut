<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemCard"
        android:layout_width="71dp"
        android:layout_height="45dp"
        android:src="@drawable/car"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />



    <TextView
        android:id="@+id/contactName"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:text="@string/dummy_taxi_company_name"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemCard"
        app:layout_constraintStart_toEndOf="@+id/itemCard"
        app:layout_constraintTop_toTopOf="@+id/itemCard"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/contactNumber"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_distance"
        android:textColor="@color/white_second"
        android:textSize="13sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/contactName"
        app:layout_constraintStart_toStartOf="@+id/contactName"/>



    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_call_green_cirlcle"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:src="@drawable/ic_call_night_user_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>