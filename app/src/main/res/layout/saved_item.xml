<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_7ssp"
        android:layout_height="wrap_content">





        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sharedItemImg"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_5ssp"
            app:strokeColor="@color/text_yello"
            app:strokeWidth="@dimen/_1sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            android:src="@drawable/no_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sharedItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanova_reg"
            android:text="Title"
            android:layout_marginStart="@dimen/_7sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemImg"
            app:layout_constraintTop_toTopOf="@+id/sharedItemImg" />

        <TextView
            android:id="@+id/sharedItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="25 June 2021"
            android:textColor="@color/white_second"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemImg"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemTitle" />





        <ImageView
            android:id="@+id/sharedItem3Dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:src="@drawable/arrow_right_21"
            app:layout_constraintBottom_toBottomOf="@+id/sharedItemImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sharedItemImg" />


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7ssp"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemImg"
            android:background="@color/view_line_clr"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>