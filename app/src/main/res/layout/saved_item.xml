<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_7ssp"
        android:layout_height="wrap_content"
         >


        <androidx.cardview.widget.CardView
            android:id="@+id/sharedItemCard"
            android:layout_width="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_45sdp"
            app:cardBackgroundColor="@color/text_yello"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/sharedItemImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1ssp"
                android:src="@drawable/shared_img1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sharedItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanova_reg"
            android:text="Vanity Night Club"
            android:layout_marginStart="@dimen/_7sdp"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemCard"
            app:layout_constraintTop_toTopOf="@+id/sharedItemCard" />

        <TextView
            android:id="@+id/sharedItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="25 June 2021"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemCard"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemTitle" />





        <ImageView
            android:id="@+id/sharedItem3Dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:src="@drawable/arrow_right_21"
            app:layout_constraintBottom_toBottomOf="@+id/sharedItemCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sharedItemCard" />


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7ssp"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemCard"
            android:background="@color/view_line_clr"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>