<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/_7ssp"
        android:layout_height="wrap_content"
         >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:id="@+id/sharedItemImg"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_10sdp"
            app:srcCompat="@drawable/no_image"

            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:strokeColor="@color/text_yello"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            />



        <TextView
            android:id="@+id/sharedItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanova_reg"
            android:text="Vanity Night Club"
            android:layout_marginStart="@dimen/_7sdp"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemImg"
            app:layout_constraintTop_toTopOf="@+id/sharedItemImg" />

        <TextView
            android:id="@+id/sharedItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="25 June 2021"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemImg"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemTitle" />


        <TextView
            android:id="@+id/sharedItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2ssp"
            android:drawableStart="@drawable/circle_white"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="08:30 pm"
            android:visibility="invisible"
            android:textColor="@color/white_thred"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/sharedItemDate"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemTitle" />





        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7ssp"
            app:layout_constraintTop_toBottomOf="@+id/sharedItemImg"
            android:background="@color/view_line_clr"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>