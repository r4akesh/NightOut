<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/box_botomsheet"
        android:padding="@dimen/_5sdp"
        >


        <ImageView
            android:id="@+id/venuesItemChk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chk_box"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/venuesItemCardView"
            app:layout_constraintBottom_toBottomOf="@+id/venuesItemCardView"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/venuesItemCardView"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:cardBackgroundColor="@color/text_yello"
            app:cardCornerRadius="@dimen/_2sdp"
            app:layout_constraintStart_toEndOf="@+id/venuesItemChk"

            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/venuesItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/venues1" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/venuesItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="Text"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/venuesItemCardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/venuesItemSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="1 Fairclough St, Liverpool1 1F..."
            android:textColor="@color/white_second"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/venuesItemCardView"
            app:layout_constraintTop_toBottomOf="@+id/venuesItemTitle" />

        <TextView
            android:id="@+id/venuesItemDistence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/proximanova_reg"
            android:text="Text"
            android:textColor="@color/white_second"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/venuesItemCardView"
            app:layout_constraintTop_toBottomOf="@+id/venuesItemSubTitle" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>