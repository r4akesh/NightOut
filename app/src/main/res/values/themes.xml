<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NightOut" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_clr</item>
        <item name="colorPrimaryVariant">@color/primary_clr</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_clr</item>
        <item name="colorSecondaryVariant">@color/primary_clr</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/txt_progress</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="Custom_white" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/txt_progress</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/proximanova_reg</item>
        <item name="android:textColor">@color/text_blk</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/_3sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="textRegular">
        <item name="fontFamily">@font/proximanova_reg</item>
    </style>

    <style name="textBold">
        <item name="fontFamily">@font/proximanova_bold</item>
    </style>

    <style name="textNormal">
        <item name="fontFamily">@font/proximanova_light</item>
    </style>

    <style name="view_line">
        <item name="android:background">@color/view_line_clr</item>

        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MyDialogThemeBlack" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="dialog_theme" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Transparent" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="appDarkEditText" parent="textRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/proximanova_reg</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="singleLine">true</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/text_yello</item>
        <item name="fontFamily">@font/proximanova_reg</item>
    </style>

    <style name="appEditText" parent="textRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_blk</item>
        <item name="fontFamily">@font/proximanova_reg</item>
        <item name="singleLine">true</item>
    </style>

    <style name="myChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:background">@drawable/box_botomsheet</item>
        <item name="android:checkable">true</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>


    </style>

    <style name="appTextAreaEditText" parent="textRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_blk</item>
        <item name="fontFamily">@font/proximanova_reg</item>
    </style>

    <style name="Theme.MyApp.Dialog.Alert" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Text Color for Buttons -->
        <item name="colorPrimary">@color/white</item>

        <!-- Background Color-->
        <item name="android:background">@color/boxclr_primary</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/white_thred</item>
        <!-- Style for positive button -->
        <!--  <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
        <!-- Style for negative button -->
        <!-- <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>-->
    </style>


    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/text_yello</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/red_clr</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>

    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">3dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="textAllCaps">false</item>

        <!--<item name="tabBackground">@drawable/selected_tab</item>-->
        <item name="fontFamily">@font/proximanova_reg</item>
        <!-- <item name="tabSelectedTextColor">@color/white</item>-->
    </style>

    <style name="MyCustomTextAppearanceTAB" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>

        <item name="android:textSize">@dimen/_11ssp</item>

    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">17dp</item>
        <item name="cornerSizeTopLeft">17dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">#6200ea</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>

    <style name="MyRatingBarTwo" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custm_ratingbar</item>
        <item name="colorControlNormal">#f57c00</item>
        <item name="colorControlActivated">#c51162</item>
    </style>

    <style name="MyRatingBarSmall" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custm_ratingbar_small</item>
        <item name="colorControlNormal">#f57c00</item>
        <item name="colorControlActivated">#c51162</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>